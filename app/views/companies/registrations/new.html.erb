<div class="container">
  <div class="row">
    <div class="offset-sm-2 col-sm-8 offset-sm-2">
    <%= form_with model: @company, url: company_registration_path, local: true do |f| %>
      <h5 class='form-header-text text-center'>
          <i class="fas fa-user-plus fa-2x my-orange"></i>　法人会員情報入力
          </h5>

  <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="company_name">会社名</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :company_name, class:"input-name", id:"company_name", placeholder:"例) 株式会社○○○○" %>
          </div>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="company_name_kana">会社名（カナ）</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :company_name_kana, class:"input-name", id:"company_name", placeholder:"例) カ）○○○○" %>
          </div>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="email">メールアドレス</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"sample@sample.com", autofocus: true %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="password">パスワード</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="password-confirmation">パスワード(確認)</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="postal_code">郵便番号</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_field :postal_code, class:"input-default", id:"postal_code", placeholder:"例）1234567",maxlength:"7"%>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="address">住所</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_field :address, class:"input-default", id:"address", placeholder:"例）宮崎県宮崎市宮崎1-1" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="phone-number">電話番号</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
        </div>

       <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="introduction">企業紹介</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_area :introduction, class:"article-input-default", id:"introduction", placeholder:"" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="staff">担当者名</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_field :staff, class:"input-default", id:"staff", placeholder:"例）営業部長 田中" %>
        </div>

        <div class='register-btn'>
          <%= f.submit "会員登録" ,class:"btn btn-outline-danger w-100" %>
        </div>
      </div>
    <% end %>
    </div>
</div>