<div class="container">
  <div class="row">
    <div class="offset-sm-2 col-sm-8 offset-sm-2">
      <%= form_with model: @matching, url:matchings_path, local: true do |f| %>
        <h5 class='form-header-text text-center'>
          <i class="fas fa-broom fa-2x my-orange"></i>新規ニーズ投稿
        </h5>

        <%= render 'layouts/error_messages', model: f.object %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="title">タイトル</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <div class='article-input-name-wrap'>
            <%= f.text_field :title, class:"input-name", id:"title", placeholder:"" %>
          </div>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="need">種類</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.collection_select(:need_id, Need.all, :id, :name, {include_blank: "---"}, {class:"select-box", id:"need"}) %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="area">募集地域</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.collection_select(:area_id, Area.all, :id, :name, {include_blank: "---"}, {class:"select-box", id:"area"}) %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="detail">詳細</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_area :detail, class:"article-input-default", id:"detail", placeholder:"" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="end_date">募集期限</label>
          </div>
          <div class='input-date-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :end_date,
                          class:'select-date',
                          id:"end_date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 2020,
                          end_year: (Time.now.year + 5),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="contact_information">ご連絡先</label>
            <span class="badge badge-danger">必須</span>
          </div>
          <%= f.text_field :contact_information, class:"input-name", id:"contact_information", placeholder:""%>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text" for="url">URL</label>
          </div>
          <%= f.text_field :url, class:"input-name", id:"url", placeholder:""%>
        </div>

        <div class='article-btn text-center'>
          <%= f.submit "投稿する" ,class:"btn btn-outline-danger w-50" %>
        </div>
      </div>

      <% end %>
    </div>
</div>