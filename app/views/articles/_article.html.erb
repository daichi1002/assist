<%# 管理者がログインしているとき%>
<% if user_signed_in? && current_user.admin?%>
  <div class="card-group col-md-6 col-lg-3">
    <% @articles.each do |article| %>
      <%= link_to admin_article_path(article.id), class: "article-link" do%>
        <span class="article-info"><%= article.genre.name %></span>
        <span class="article-info" style="float: right;"><%= article.created_at.strftime('%Y/%m/%d') %></span>
      <div class="card articles-chart">
        <%= image_tag article.image, class:"card-img-top" if article.image.attached? %> 
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h4>
            <p class="card-text"><%= article.information.truncate(30) %></p>
            <p class="like-button"><i class="far fa-heart fa-2x" style="color: #e82a2a;"></i><span style="color: #e82a2a"><%#= article.likes.count %></span></p>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
<%# 管理者以外の閲覧者の場合 %>
<% else %>
  <div class="card-group col-md-6 col-lg-3">
    <% @articles.each do |article| %>
      <%= link_to article_path(article.id), class: "article-link" do%>
        <span class="article-info"><%= article.genre.name %></span>
        <span class="article-info" style="float: right;"><%= article.created_at.strftime('%Y/%m/%d') %></span>
      <div class="card articles-chart">
        <%= image_tag article.image, class:"card-img-top" if article.image.attached? %> 
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h4>
            <p class="card-text"><%= article.information.truncate(30) %></p>
            <p class="like-button"><i class="far fa-heart fa-2x" style="color: #e82a2a;"></i><span style="color: #e82a2a"><%#= article.likes.count %></span></p>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
<% end %>