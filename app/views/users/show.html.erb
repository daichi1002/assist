<div class="container">
  <h5 class="article-title"><i class="fas fa-paperclip fa-2x my-orange"></i>　<%= @user.last_name %>さんのお気に入り記事一覧</h5>
    <div class="row">
      <% @user.liked_articles.each do |article| %>
        <div class="card-group col-md-6 col-lg-3">
          <%= link_to article_path(article.id), class: "article-link" do%>
          <span class="article-info"><%= article.genre.name %></span>
          <div class="card articles-chart">
            <%= image_tag article.image, class:"card-img-top" if article.image.attached? %> 
              <div class="card-body">
                <h5 class="card-title"><%= article.title %></h4>
                <p class="card-text"><%= article.information.truncate(30) %></p>
                <p class="like-button"><i class="far fa-heart fa-2x" style="color: #e82a2a;"></i><span style="color: #e82a2a"><%= article.likes.count %></span></p>
              </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="article-title"><i class="fas fa-paperclip fa-2x my-orange"></i>　ユーザー情報</h5>
      <div class="table-responsive-lg text-center">
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <td class="align-middle w-25">お名前</th>
              <td class="align-middle"><%= @user.first_name %><%= @user.last_name%></td>
            </tr>
            <tr>
              <td class="align-middle w-25">お名前（カナ）</th>
              <td class="align-middle"><%= @user.first_name_kana %><%= @user.last_name_kana%></td>
            </tr>
            <tr>
              <td class="align-middle w-25">MAIL</th>
              <td class="align-middle"><%= @user.email %></td>
            </tr>
            <tr>
              <td class="align-middle w-25">都道府県</th>
              <td class="align-middle"><%= @user.state.name %></td>
            </tr>
            <tr>
              <td class="align-middle w-25">生年月日</th>
              <td class="align-middle"><%= @user.birth_day %></td>
            </tr>
            <tr>
              <td class="align-middle w-25">電話番号</th>
              <td class="align-middle"><%= @user.phone_number %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to '編集', edit_user_registration_path, method: :get, class: "btn btn-outline-success w-25 admin-btn" %>
      </div>
    </div>
  </div>
</div>